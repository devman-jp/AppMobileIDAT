<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/fondo_activity"
    app:cardCornerRadius="20dp"
    app:strokeColor="@color/fondo_nigationbar"
    app:strokeWidth="2dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="142dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivHistorial"
            android:layout_width="129dp"
            android:layout_height="102dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/cajaabierta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNomApeConsignadoH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="149dp"
            android:text="TextView"
            android:textColor="@color/texto_navigationbar"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tvNomApeRemitenteH"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNomApeRemitenteH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="TextView"

            android:textColor="@color/texto_navigationbar"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tvDireccionRemitenteH"
            app:layout_constraintStart_toStartOf="@+id/tvNomApeConsignadoH"
            app:layout_constraintTop_toBottomOf="@+id/tvNomApeConsignadoH" />

        <TextView
            android:id="@+id/tvDireccionRemitenteH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"

            android:textColor="@color/texto_navigationbar"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvNomApeRemitenteH"
            app:layout_constraintTop_toBottomOf="@+id/tvNomApeRemitenteH" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>